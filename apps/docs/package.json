{
    "name": "docs",
    "version": "1.0.0",
    "description": "Antora-powered documentation for d-o-c",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "antora antora-playbook.yml",
        "dev": "antora antora-playbook.yml --to-dir=./build/site --clean",
        "serve": "npx http-server build/site -c-1 -p 8080",
        "watch": "nodemon --watch src --watch antora-playbook.yml --ext adoc,yml,yaml,js --exec \"pnpm run dev\"",
        "clean": "rm -rf build",
        "start": "pnpm run serve"
    },
    "devDependencies": {
        "@antora/cli": "^3.1.0",
        "@antora/site-generator": "^3.1.0",
        "http-server": "^14.0.0",
        "nodemon": "^3.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "meilisearch": "^0.41.0"
    }
}
