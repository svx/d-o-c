<div class="{{#if class}}{{class}}{{/if}}">
  <div class="search-input-wrap relative w-full max-w-[888px] mx-auto">
    <input
      type="text"
      id="search-input"
      data-search-input
      placeholder="Search Docs"
      class="w-full py-2 pl-6 pr-4 border rounded-full border-vapor focus:outline-none focus:ring-2 focus:ring-vapor focus:border-transparent"
    >
    <button data-search-clear class="absolute inset-y-0 right-5 flex items-center gap-2 pl-3 text-link-on-light">
      Clear
      <img class="w-3 h-3" src="{{uiRootPath}}/img/close.svg" alt="Search Icon">
    </button>
  </div>
</div>
